{
  "name": "chat-widget-edson",
  "version": "0.1.0",
  "description": "Embeddable AI chat widget for AI technical assessment.",
  "license": "MIT",
  "author": "Edson Ascendino",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs"
    },
    "./widget.js": {
      "default": "./dist/widget.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/edsonascendino/chat-widget.git"
  },
  "keywords": [
    "react",
    "widget",
    "chat",
    "ai",
    "embeddable",
    "openai",
    "chatgpt"
  ],
  "scripts": {
    "dev": "vite",
    "build": "node build.mjs",
    "preview": "vite preview --outDir dist",
    "test:api": "npm run build && npm run preview",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "serve-example": "vite preview --outDir dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.26",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "eslint": "^9.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sass": "^1.80.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  }
}
